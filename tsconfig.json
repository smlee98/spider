{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["dom", "dom.iterable", "esnext", "WebWorker"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "jsx": "preserve",
        "incremental": false,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@radix-ui/*": ["__DO_NOT_USE_RADIX_DIRECTLY__/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        ".next/types/**/*.ts",
        "actions",
        "app",
        "components",
        "lib",
        "types",
        "middleware.ts",
        "next-env.d.ts",
        "./*.config.ts",
        "postcss.config.mjs"
    ],
    "exclude": ["node_modules", "components/ui", ".next"]
}
